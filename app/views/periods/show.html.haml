- model_class = Period
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:number) + ':'
  %br
  = @period.number
%p
  %strong= model_class.human_attribute_name(:kind) + ':'
  %br
  = @period.kind
%p
  %strong= model_class.human_attribute_name(:course_id) + ':'
  %br
  = @period.course_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), periods_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_period_path(@period), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), period_path(@period), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
