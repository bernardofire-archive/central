- model_class = Institution
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @institutions.each do |institution|
      %tr
        %td= link_to institution.name, institution_path(institution)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_institution_path(institution), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), institution_path(institution), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_institution_path, :class => 'btn btn-primary'
