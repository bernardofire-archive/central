- model_class = Institution
.page-header
  %h1
    = @institution.name

%h4
  Courses:
- @institution.courses.each do |course|
  %p
    = link_to course.name, course_path(course)

%br
= link_to 'Create Course', new_course_path(institution: @institution), class: :btn,
  institution: @institution

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), institutions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_institution_path(@institution), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), institution_path(@institution), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
