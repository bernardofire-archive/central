- model_class = Course
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @courses.each do |courses|
      %tr
        %td= link_to courses.name, course_path(courses)
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_course_path(courses), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), course_path(courses), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_course_path, :class => 'btn btn-primary'
